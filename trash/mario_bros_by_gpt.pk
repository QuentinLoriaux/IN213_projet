# TITLE "Super Mario Bros Theme";
# COMPOSER "Koji Kondo";
# ARRANGER "Chat GPT"; // Je n'ai pas retouché les sons, GPT a généré ceci à partir de la donnée de example.pk
# BPM 140;
// Oui, c'est erratique

instrument piano = "../soundfonts/yamaha_c3_grand_piano.sf2"; 

// Define chords
chord cmaj (c3'1 e3 g3);
chord gmaj (g3'1 b3 d4);
chord amin (a3'1 c4 e4);
chord fmaj (f3'1 a3 c4);

// Define melody phrases
phrase melody1 {
    e4'2 e4'2 e4'2 __ c4'2 e4'2 g4'2
    __ g3'2 __ c4'2 g3'2 e4'2
    a4'2 b4'2 a4-'2 g4-'2 __
    b4'2 a4'2 g4'2 __
};

phrase melody2 {
    e4'2 c4'2 d4'2 c4'2
    b3'2 g3'2 a3'2 f3'2
    e4'2 c4'2 d4'2 b3'2
};

// Define bass phrases
phrase bass1 {
    cmaj gmaj amin fmaj
    cmaj gmaj amin fmaj
};

// Combine melody and bass into full sheet
sheet full (piano) {
    melody1 bass1
    melody2 bass1
    melody1 bass1
    melody2 bass1
};

print "playing super mario bros theme!";
play(full);
print "finished playing!";